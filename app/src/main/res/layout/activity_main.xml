<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/smart_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim12"
                android:layout_marginLeft="@dimen/dim12"
                android:layout_marginRight="@dimen/dim3"
                android:layout_marginTop="@dimen/dim12"
                android:layout_weight="1"
                android:background="@drawable/smart_btn_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dim40">

                <RelativeLayout
                    android:layout_width="@dimen/dim100"
                    android:layout_height="@dimen/dim100">

                    <comth.text.baoqi.myapplication.view.CustomRoundView
                        android:layout_width="@dimen/dim100"
                        android:layout_height="@dimen/dim100"
                        android:src="@drawable/shap_cus" />

                    <comth.text.baoqi.myapplication.view.CustomRoundView
                        android:id="@+id/icon_cv"
                        android:layout_width="@dimen/dim90"
                        android:layout_height="@dimen/dim90"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/logo" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dim20"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt45" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dim12"
                android:layout_marginRight="@dimen/dim12"
                android:layout_marginTop="@dimen/dim12"
                android:layout_weight="0"
                android:background="@drawable/smart_btn_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dim30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dim10"
                    android:background="@mipmap/more"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/txt45" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/write_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim3"
            android:layout_marginLeft="@dimen/dim12"
            android:layout_marginRight="@dimen/dim12"
            android:background="@drawable/smart_btn_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dim30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dim10"
                android:text="查看"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45" />

            <TextView
                android:id="@+id/read_item_tv_dw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dim10"
                android:text=" 记"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45" />

            <TextView
                android:id="@+id/read_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_toStartOf="@+id/read_item_tv_dw"
                android:text="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/read_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim12"
            android:layout_marginLeft="@dimen/dim12"
            android:layout_marginRight="@dimen/dim12"
            android:background="@drawable/smart_btn_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dim30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dim10"
                android:text="记录"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45" />

            <TextView
                android:id="@+id/write_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dim10"
                android:text="1 item"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim12"
            android:layout_marginLeft="@dimen/dim12"
            android:layout_marginRight="@dimen/dim12"
            android:layout_marginTop="@dimen/dim12"
            android:background="@drawable/smart_btn_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dim30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="关于啥子"
                android:textColor="@color/text_black"
                android:textSize="@dimen/txt45" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
